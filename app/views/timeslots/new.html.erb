<h1>Create Timeslot</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@timeslot) do |f| %>
            <%= f.label :table %><br>
            <%= f.number_field :table %><br>

            <%= f.label :datetime, "Date and Time" %><br>
            <%= f.datetime_field :datetime %><br>

            <%= f.label :capacity %><br>
            <%= f.number_field :capacity %><br><br>

            <%= f.submit "Create new timeslot", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
